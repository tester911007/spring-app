<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:musicPlayer.properties"/>

    <bean id="musicBean"
          class="ru.tester.springsource.ClassicalMusic">
        <!-- <constructor-arg value="testValue"/> -->
    </bean>
    <bean id="classicalMusic"
          class="ru.tester.springsource.ClassicalMusic">
    </bean>
    <bean id="rockMusic"
          class="ru.tester.springsource.RockMusic">
    </bean>

    <bean id="musicPlayer"
          class="ru.tester.springsource.MusicPlayer"
          scope="prototype"> <!-- по умолчанию Singleton, prototype - каждый раз создаётся новый объект -->
        <!-- <constructor-arg ref="musicBean"/> -->
        <property name="music" ref="musicBean"/>

        <property name="musicList">
            <list>
                <ref bean="musicBean"/>
                <ref bean="rockMusic"/>
            </list>
        </property>


        <property name="name" value="${musicPlayer.name}"/>
        <property name="year" value="${musicPlayer.year}"/>
    </bean>
</beans>